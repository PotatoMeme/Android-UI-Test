<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:state_selected="true">
        <shape>
            <solid android:color="@color/secondaryDark_clicked" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/highlightMint_clicked" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/secondaryDark_clicked" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/secondaryDark" />
            <corners android:radius="10dp" />
            <stroke android:width="3dp" android:color="@color/highlightMint" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/secondaryDark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>