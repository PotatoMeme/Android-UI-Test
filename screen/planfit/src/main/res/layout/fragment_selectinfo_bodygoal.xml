<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="주요 목표는 무었인가요?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="적절한 운동 추천에 필요해요! 외부에 공개되지 않아요"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:flexWrap="wrap"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="@+id/btn_next"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:id="@+id/toggle_goal_1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="평생 숙제 다이어트"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toggle_goal_2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="뱃살,옆구리 살 빼기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="팔뚝 군살 제거"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="슬림한 하체 라인 만들기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_5"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="벌크업 하기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_6"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="넓은 어깨 갖기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_7"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="마른 몸 벗어나기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_8"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
