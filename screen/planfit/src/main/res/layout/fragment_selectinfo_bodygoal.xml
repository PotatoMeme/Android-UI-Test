                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_11"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="전체적인 근육량 증가"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toggle_goal_12"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_roundcorner"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            android:selectable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="선명한 복근 만들기"
                android:textColor="@drawable/text_white_color_selector"
                android:textSize="20dp" />
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mint_roundcorner"
        android:gravity="center"
        android:text="다음"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>