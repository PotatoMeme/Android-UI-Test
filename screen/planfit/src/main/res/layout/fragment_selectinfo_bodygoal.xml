<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:text="주요 목표는 무었인가요?"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_h1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="적절한 운동 추천에 필요해요! 외부에 공개되지 않아요"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small_medium"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="@+id/btn_next"
        app:layout_constraintStart_toStartOf="@+id/btn_next"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:orientation="vertical"
            app:flexWrap="wrap">

            <LinearLayout
                android:id="@+id/toggle_goal_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="평생 숙제 다이어트"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="뱃살,옆구리 살 빼기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="팔뚝 군살 제거"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="슬림한 하체 라인 만들기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="벌크업 하기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="넓은 어깨 갖기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="마른 몸 벗어나기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="굵고 큰 팔 만들기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_9"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="탄탄한 몸 만들기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="힙업"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_11"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="전체적인 근육량 증가"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toggle_goal_12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toggle_button_height"
                android:layout_marginEnd="@dimen/margin_small_medium"
                android:layout_marginBottom="@dimen/margin_small_medium"
                android:layout_weight="1"
                android:background="@drawable/toggle_roundcorner"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_large"
                android:selectable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="선명한 복근 만들기"
                    android:textColor="@drawable/text_white_color_selector"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>
        </com.google.android.flexbox.FlexboxLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="@dimen/toggle_button_height"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/mint_roundcorner"
        android:gravity="center"
        android:text="다음"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>